<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sqlite.example.com.finalprojectforcourse.sportsProfile">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Head Lines"
        android:textSize="30sp"
        android:textStyle="italic|bold"
        />

    <TextView
        android:id="@+id/snews1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textSize="20sp"
        android:background="#c3d8ed"/>

    <TextView
        android:id="@+id/snews2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/snews1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:textSize="20sp"
        android:background="#c3d8ed"

        />

    <TextView
        android:id="@+id/snews3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/snews2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:textSize="20sp"
        android:background="#c3d8ed"/>

    <TextView
        android:id="@+id/snews4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/snews3"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:textSize="20sp"
        android:background="#c3d8ed"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Watch Video"
        android:textSize="30sp"
        android:textStyle="italic|bold"
        />

    <ImageButton
        android:id="@+id/simageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="220dp"
        android:layout_marginTop="300dp"
        app:srcCompat="@drawable/unnamed" />

    <ImageButton
        android:id="@+id/simageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="220dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="300dp"
        app:srcCompat="@drawable/unnamed" />



</RelativeLayout>
